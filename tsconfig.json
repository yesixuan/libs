{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "module": "esnext",
    "removeComments": false,
    "preserveConstEnums": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__"
  ],
  "exclude": [
    "__tests__",
    "node_modules",
    "lib",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "compileOnSave": false
}
